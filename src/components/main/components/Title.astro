---
interface Props {
    title: string
}

const {title}: Props = Astro.props
---


<div class="relative flex flex-col gap-3 items-center justify-center my-20">
    <h3 class="text-2xl mt-2 text-secondary">{title}</h3>
    <div class="flex">
        <div class="w-9 border border-gray-500"></div>
        <div class="w-14 border border-secondary"></div>
        <div class="w-9 border border-gray-500"></div>
    </div>
    <h4 class="text-8xl text-white opacity-10 absolute top-0 hidden md:block">{title}</h4>
</div>