---
import './bento.css'

interface Props {
    title: string
    date: string
    content: string
    class?: string
}

const {title, date, content} = Astro.props
---

<article class={`${Astro.props.class} p-5 border border-secondary border-opacity-30 rounded-md flex flex-col justify-end bento` }>
    <h2 class="text-3xl text-secondary">{title}</h2>
    <h3 class="text-sm">{date}</h3>
    <p class="font-secondary text-sm">{content}</p>
</article>