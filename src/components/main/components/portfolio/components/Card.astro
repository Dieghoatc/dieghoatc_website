---
import { type Projects } from "../cardTypes";
import "./card.css";

const { title, date, content, image, techs } = Astro.props as Projects;
---

<article>
  <div class="card">
    <div class="mb-2">
      <h2 class="text-2xl text-gray-300">{title}</h2>
      <h3 class="text-sm font-secondary text-gray-400">{date}</h3>
    </div>
    <div>
      <p class="text-sm font-secondary font-normal">{content}</p>
    </div>
    <div class="">
      <ul class="flex flex-wrap">
        {
          techs.map((tech) => {
            return (
              <li class="mr-1.5 mt-2 text-sm text-paragraph font-semibold font-secondary">
                <div class="flex items-center rounded-full bg-amber-400/10 px-3 py-1 text-xs font-medium leading-5 text-amber-300 ">
                  {tech}
                </div>
              </li>
            );
          })
        }
      </ul>
    </div>
  </div>
</article>
